{
  "name": "testgrid",
  "version": "1.0.0",
  "repository": "https://github.com/Wavix/testgrid",
  "author": "Wavix Inc.",
  "scripts": {
    "dev": "next dev --webpack",
    "build": "next build --webpack",
    "lint": "npx eslint ./src/ --ext .ts,.tsx,.js,.jsx --quiet --color",
    "type": "tsc --project tsconfig.json --noEmit",
    "format": "prettier --write './src/**/*.{js,ts,json,tsx,scss}'",
    "start": "next start -p 7045",
    "cli": "node -r @swc-node/register ./src/app/database/cli.ts",
    "migrate": "node -r @swc-node/register ./src/app/database/migrate.ts",
    "migrate:create": "pnpm migrate create --folder ./src/app/migrations --name",
    "test": "jest --forceExit --detectOpenHandles"
  },
  "dependencies": {
    "@chakra-ui/icons": "^2.2.4",
    "@chakra-ui/input": "^2.1.2",
    "@chakra-ui/react": "^2.10.9",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@types/node": "25.2.3",
    "@types/react": "^19.2.14",
    "@types/react-dom": "19.2.3",
    "@types/uuid": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "bcrypt": "^6.0.0",
    "chart.js": "^4.5.1",
    "classnames": "^2.5.1",
    "dayjs": "^1.11.19",
    "eslint": "10.0.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-next": "16.1.6",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.15.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-unused-imports": "^4.4.1",
    "file-system-cache": "3.0.0-alpha.8",
    "framer-motion": "^12.34.0",
    "http-status": "^2.1.0",
    "is-uuid": "^1.0.2",
    "joi": "^18.0.2",
    "jose": "^6.1.3",
    "jsonwebtoken": "^9.0.3",
    "next": "16.1.6",
    "pg-hstore": "^2.3.4",
    "react": "19.2.4",
    "react-chartjs-2": "^5.3.1",
    "react-datepicker": "^9.1.0",
    "react-dom": "19.2.4",
    "react-select": "^5.10.2",
    "react-use": "^17.6.0",
    "react18-json-view": "^0.2.9",
    "sequelize": "^6.37.7",
    "sqlite3": "^5.1.7",
    "typescript": "5.9.3",
    "use-sound": "^5.0.0",
    "uuidv4": "^6.2.13"
  },
  "devDependencies": {
    "@svgr/webpack": "^8.1.0",
    "@swc-node/register": "^1.11.1",
    "@swc/cli": "^0.8.0",
    "@swc/core": "1.15.11",
    "@types/bcrypt": "^6.0.0",
    "@types/clone-deep": "^4.0.4",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/react-datepicker": "^7.0.0",
    "@types/sequelize": "^6.12.0",
    "@types/umzug": "^3.0.0",
    "autoprefixer": "^10.4.24",
    "clone-deep": "^4.0.1",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "sass": "^1.97.3",
    "sequelize-cli": "^6.6.5",
    "umzug": "^3.8.2"
  },
  "overrides": {
    "react-json-view": {
      "react": "$react",
      "react-dom": "$react-dom"
    }
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "sqlite3"
    ]
  },
  "simple-pre-commit": "npx lint-staged",
  "lint-staged": {
    "*.{ts,js}": [
      "./node_modules/.bin/prettier -w './src/**/*.{ts,tsx}' ",
      "./node_modules/.bin/eslint ./src/ --ext .ts,.tsx,.js,.jsx --quiet --color --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  }
}
